{
  "name": "trello-clone-api",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for Trello clone",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run build && node dist/server.js",
    "build": "tsc -p tsconfig.json && copy /Y src\\db\\schema.sql dist\\db\\schema.sql >nul",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "db:migrate": "npm run build && node dist/db/migrate.js"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
